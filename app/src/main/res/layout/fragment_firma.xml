<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context="com.devhyc.easypos.ui.firma.FirmaFragment">

    <LinearLayout
        android:id="@+id/panelFirma"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:background="#ECE7E7"
        android:elevation="20dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/flBorrarFirma"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/flGuardarFirma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_weight="1"
        android:clickable="true"
        android:src="@drawable/ic_check1"
        app:backgroundTint="#4CAF50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/flBorrarFirma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:clickable="true"
        android:src="@drawable/gomadeborrar"
        app:backgroundTint="#F86396"
        app:layout_constraintBottom_toTopOf="@+id/flGuardarFirma"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/etAclaracionFirma"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_weight="1"
        android:ems="10"
        android:hint="AclaraciÃ³n"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/flGuardarFirma"
        app:layout_constraintEnd_toStartOf="@+id/flGuardarFirma"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/flGuardarFirma" />

</androidx.constraintlayout.widget.ConstraintLayout>