<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvMonedaMedioPago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="U$S"
                app:layout_constraintBottom_toBottomOf="@+id/tvMontoMedioPago"
                app:layout_constraintEnd_toStartOf="@+id/tvMontoMedioPago"
                app:layout_constraintTop_toTopOf="@+id/tvMontoMedioPago" />

            <TextView
                android:id="@+id/tvNombreMedioPago"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="fill"
                android:text="MEDIO DE PAGO"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/tvMonedaMedioPago"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvMontoMedioPago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="MONTO"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/linearTarjeta"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tvMonedaMedioPago"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvNombreMedioPago">

                <TextView
                    android:id="@+id/tvNroTarjetaMedioPago"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NRO TARJETA"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvFechaVtoMedioPago"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="FECHA VTO"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvCuotasMedioPago"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CUOTAS"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvAutorizacionMedioPago"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="AUTORIZACION"
                    android:visibility="gone" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>